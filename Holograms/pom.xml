            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sainttx.holograms</groupId>
            <artifactId>holograms-v1_9_R1</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
